<div class="px-4 pt-4 pb-2">
  <div class="bg-gray-200 rounded shadow-lg p-2">
    <%= form_for :business_assets, url: business_assets_path, method: :get do |i| %>
      <div class="flex">
        <%= fields_for :filters do |f| %>
            <div class="w-1/5">
              <%= f.text_field :name, placeholder: 'Name', value: @selected_name, class: "form-field" %>
            </div>
            <div class="w-1/5 pl-2">
              <%= f.collection_select(:host_type_id, HostType.all, :id, :name, { include_blank: 'Host type', selected: @selected_host_type_id }, { class: "form-field" }) %>
            </div>
            <div class="w-1/5 pl-2">
              <%= f.collection_select(:info_type_id, InfoType.all, :id, :name, { include_blank: 'Info type', selected: @selected_info_type_id }, { class: "form-field" }) %>
            </div>
            <div class="w-1/5 pl-2">
              <%= f.collection_select(:priority_id, Priority.all, :id, :name, { include_blank: 'Priority', selected: @selected_priority_id }, { class: "form-field" }) %>
            </div>
        <% end %>
        <div class="flex w-1/5">
          <div class="w-1/2 pl-2"><%= i.submit "Filter", class: "w-full h-full block rounded-lg p-1 bg-slate-500 text-gray-100 hover:bg-slate-400 hover:font-bold" %></div>
          <div class="w-1/2 pl-2"><%= link_to "Reset", business_assets_path(filters: { name: '', location_id: '', country_id: '', region_id: '' }), class: "text-center w-full h-full block rounded-lg p-1 bg-slate-500 text-gray-100 hover:bg-slate-400 hover:font-bold" %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>