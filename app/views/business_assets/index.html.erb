<div class="h-screen flex">
  <%= render partial: 'shared/navbar' %>
  <div class="w-5/6 bg-gray-600 grid grid-cols-4 grid-rows-4 gap-4 p-4">
    <div class="bg-gray-200 rounded shadow-lg">
      <div class="p-2">
        <h4 class="bg-gray-300 rounded p-2"> <%= link_to 'New Asset', new_business_asset_path %> </h4>
      </div>
    </div>
    <% @business_assets.each do |i| %>
      <div class="bg-gray-200 rounded shadow-lg">
        <div class="p-2">
          <h4 class="bg-gray-300 rounded p-2"> 
            <%= link_to i.name, edit_business_asset_path(i), class: "#{ 'disabled' if !current_user.admin? }" %>
            <% if current_user.admin? %>
              <%= link_to 'Delete', business_asset_path(i), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            <% end %>
          </h4>
        </div>
        <div class="text-sm px-1">
          <div class="flex w-full">
            <div class="w-1/2 p-1">
              <div class="bg-gray-100 rounded p-1 text-gray-700 shadow-sm">
                <%= i.asset_code %>
              </div>
            </div>
            <div class="w-1/2 p-1">
              <div class="bg-gray-100 rounded p-1 text-gray-700 shadow-sm">
                <%= i.cost %>
              </div>
            </div>
          </div>
          <div class="flex w-full">
            <div class="w-1/2 p-1">
              <div class="bg-gray-100 rounded p-1 text-gray-700 shadow-sm">
                <%= i.cost_type %>
              </div>
            </div>
            <div class="w-1/2 p-1">
              <div class="bg-gray-100 rounded p-1 text-gray-700 shadow-sm">
                <%= i.host_type.name %>
              </div>
            </div>
          </div>
          <div class="flex w-full">
            <div class="w-1/2 p-1">
              <div class="bg-gray-100 rounded p-1 text-gray-700 shadow-sm">
                <%= i.info_type.name %>
              </div>
            </div>
            <div class="w-1/2 p-1">
              <div class="bg-gray-100 rounded p-1 text-gray-700 shadow-sm">
                <%= i.priority.name %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


