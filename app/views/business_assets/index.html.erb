<%= link_to 'New Asset', new_business_asset_path %>

<br>

<div>
  <% @business_assets.each do |i| %>
    <h4> 
      <%= link_to i.name, edit_business_asset_path(i), class: "#{ 'disabled' if !current_user.admin? }" %>
      <% if current_user.admin? %>
        <%= link_to 'Delete', business_asset_path(i), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      <% end %>
    </h4>
  <% end %>
</div>
