<% @company_id ||= params[:company_id] %>

<div class="p-2">
  <div class="w-full bg-gray-100 rounded shadow-lg p-1">

    <%= form_for @employee do |f| %>
      <% if @employee.errors.any? %>
        <div><%= @employee.errors.full_messages %></div>
      <% end %>
      <div class="flex px-3">
        <div class="w-1/2 px-2 py-2">
          <div class="text-sm pl-1">First name</div>
          <%= f.text_field :first_name, class: "form-field" %>
        </div>
        <div class="w-1/2 px-2 py-2">
          <div class="text-sm pl-1">Surname</div>
          <%= f.text_field :surname, class: "form-field" %>
        </div>
      </div>
      <div class="flex px-3">
        <div class="w-1/2 px-2 p-2">
          <div class="text-sm pl-1">Email</div>
          <%= f.text_field :email, class: "form-field" %>
        </div>
        <div class="w-1/2 px-2 p-2">
          <div class="text-sm pl-1">Phone number</div>
          <%= f.text_field :phone_number, class: "form-field" %>
        </div>
      </div>
      <%= f.hidden_field :company_id, value: @company_id %>
      <div class="px-5 py-3"><%= f.submit "Submit", class: "block rounded-lg px-2 py-1 bg-slate-500 text-gray-100 hover:bg-slate-400 hover:font-bold" %></div>
    <% end %>
  </div>
</div>