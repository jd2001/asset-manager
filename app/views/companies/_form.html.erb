<div class="p-2">
  <div class="w-full bg-gray-100 rounded shadow-lg p-1">

    <%= form_for @company do |f| %>
      <% if @company.errors.any? %>
        <div><%= @company.errors.full_messages %></div>
      <% end %>
      <div class="flex p-3">
        <div class="text-sm pl-1">Company Name</div>
        <%= f.text_field :name, class: "form-field" %>
      </div>
      <div class="px-5 py-3"><%= f.submit "Submit", class: "block rounded-lg px-2 py-1 bg-slate-500 text-gray-100 hover:bg-slate-400 hover:font-bold" %></div>
    <% end %>
  </div>
</div>
